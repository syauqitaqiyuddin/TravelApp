<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/serif_medium"
        android:text="Pesan Tiket sekarang"
        android:textSize="20sp"
        android:paddingStart="20dp"/>
    <EditText
        android:id="@+id/nama_depan"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="90dp"
        android:layout_marginStart="30dp"
        android:paddingStart="15dp"
        android:fontFamily="@font/serif_medium"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:text=""
        android:hint="First Name"
        />
    <EditText
        android:id="@+id/nama_belakang"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginTop="90dp"
        android:layout_marginStart="210dp"
        android:paddingStart="15dp"
        android:fontFamily="@font/serif_medium"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:text=""
        android:hint="Last Name"
        />

    <Spinner
        android:id="@+id/kota_asal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="160dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:paddingStart="15dp"
        />
    <Spinner
        android:id="@+id/kota_tujuan"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="230dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:paddingStart="15dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="310dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingStart="20dp"
        android:fontFamily="@font/serif_medium"
        android:text="Tanggal Keberangkatan :"
        android:textSize="20sp"
        />
    <DatePicker
        android:id="@+id/pilih_tanggal"
        android:layout_width="330dp"
        android:layout_height="140dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="370dp"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="530dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingStart="20dp"
        android:fontFamily="@font/serif_medium"
        android:text="Pilih waktu keberangkatan :"
        android:textSize="20sp"
        />
    <TimePicker
        android:id="@+id/pilih_waktu"
        android:layout_width="330dp"
        android:layout_height="140dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="590dp"
        android:timePickerMode="spinner"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pesan_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="750dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="Pesan Tiket"
        android:textColor="@color/white"
        android:background="@color/orange"
        />
</RelativeLayout>